---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css'
---

<Layout>
  <div class="min-h-screen flex flex-col">
    <!-- Header/Navbar -->
    <header class="container mx-auto py-6 px-4 md:px-8 opacity-0" id="header-section">
      <div class="flex justify-between items-center">
        <!-- Logo Text on Left -->
        <div class="font-syncopate font-bold text-lg md:text-xl">
          <a href="#" class="hover:opacity-90 transition-opacity">
            <span class="text-laravel-red">LARAVEL</span> DUBAI
          </a>
        </div>
        
        <!-- Join Link on Right -->
        <a href="#join" class="inline-flex items-center text-sm font-syncopate font-bold hover:text-laravel-red transition-colors">
          JOIN COMMUNITY
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </header>

    <!-- Hero Section -->
    <section id="hero" class="flex-grow flex flex-col justify-center items-center text-center px-4 md:px-8 py-16 md:py-24 relative">
      <div class="absolute inset-0 bg-gradient-to-b from-bg-dark via-bg-dark to-black -z-10"></div>
      <div class="absolute inset-0 bg-[url('/hero-pattern.svg')] bg-center opacity-5 -z-10"></div>
      <!-- Dubai Skyline Subtle Backdrop -->
      <div class="absolute bottom-0 left-0 right-0 h-24 bg-[url('/dubai-skyline.svg')] bg-repeat-x bg-bottom opacity-30 -z-10"></div>
      
      <!-- Background removed -->
      
      <div class="hero-content opacity-0 translate-y-4 w-full max-w-4xl mx-auto" id="hero-content">
        <!-- Logo Animation Container -->
        <div class="relative mb-8">
          <h1 class="relative font-syncopate font-bold text-4xl md:text-6xl lg:text-7xl tracking-wider mb-4">
            <span class="text-laravel-red">LARAVEL</span> DUBAI
          </h1>
        </div>
        
        <h2 class="font-syncopate text-xl md:text-2xl text-off-white mb-8 mx-auto text-center">
          DUBAI'S LARAVEL COMMUNITY IS COMING<br>
          <span class="block mt-2 text-laravel-red">CODE. CONNECT. CREATE.</span>
        </h2>
        
        <!-- Dubai-inspired decorative element -->
        <div class="flex items-center justify-center my-4 mb-8">
          <div class="h-px w-16 bg-gradient-to-r from-transparent via-amber-400/40 to-transparent"></div>
          <div class="mx-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-400/60" viewBox="0 0 20 20" fill="currentColor">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </div>
          <div class="h-px w-16 bg-gradient-to-r from-transparent via-amber-400/40 to-transparent"></div>
        </div>
        
        <a href="#join" class="bg-gradient-to-r from-laravel-red to-laravel-red/90 text-white font-instrument font-medium px-8 py-3 rounded-md transition-all hover:shadow-lg hover:shadow-laravel-red/20 inline-block">
          Get Notified for First Meetup
        </a>
      </div>
    </section>

    <!-- First Event Teaser -->
    <section id="event" class="bg-black/50 py-20 px-4 md:px-8 relative overflow-hidden">
      <!-- Dubai skyline background with very low opacity -->
      <div class="absolute bottom-0 left-0 right-0 h-24 bg-[url('/dubai-skyline.svg')] bg-repeat-x bg-bottom opacity-10 -z-10"></div>
      
      <div class="container mx-auto text-center max-w-4xl opacity-0 translate-y-4 relative" id="event-section">
        <div class="flex flex-col md:flex-row items-center gap-10">
          <!-- Countdown Circle -->
          <div class="w-40 h-40 rounded-full border-2 border-laravel-red flex flex-col justify-center items-center flex-shrink-0 mx-auto md:mx-0 relative">
            <span class="text-laravel-red font-syncopate font-bold text-xl">COMING</span>
            <span class="text-sm mt-1">Q3 2025</span>
          </div>
          
          <!-- Event Info -->
          <div class="relative">            
            <h3 class="font-syncopate text-xl mb-4 md:text-left text-center">
              FIRST EVENT TEASER
            </h3>
            <p class="text-off-white text-lg mb-6 md:text-left text-center">
              Our first Laravel Dubai event is coming soon at an iconic Dubai venue.
              Expect powerful talks, local dev energy, and a celebration of open-source innovation — bringing Laravel excellence to the UAE tech ecosystem.
            </p>
            <div class="flex justify-center md:justify-start">
              <a href="#join" class="border-2 border-laravel-red text-white font-instrument font-medium px-6 py-2 rounded-md transition-all hover:bg-laravel-red/10">
                I Want to Attend
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About Us Section -->
    <section id="about-us" class="py-20 px-4 md:px-8 bg-gradient-to-b from-black to-bg-dark/50 relative overflow-hidden">
      <!-- Dubai skyline background with very low opacity -->
      <div class="absolute bottom-0 left-0 right-0 h-24 bg-[url('/dubai-skyline.svg')] bg-repeat-x bg-bottom opacity-10 -z-10"></div>

      <div class="container mx-auto max-w-4xl opacity-0 translate-y-4" id="about-us-section">
        <h2 class="font-syncopate font-bold text-3xl md:text-4xl mb-4 text-center">ABOUT <span class="text-laravel-red">US</span></h2>
        <p class="text-center text-off-white/80 mb-12 max-w-3xl mx-auto">Laravel Dubai is a community-driven initiative to connect Laravel developers across the UAE, fostering growth and collaboration in the region's tech ecosystem.</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <div class="bg-black/30 rounded-lg p-6 border border-laravel-red/10 hover:border-laravel-red/30 transition-colors">
            <h3 class="font-syncopate text-xl mb-4 flex items-center">
              <span class="text-laravel-red mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0012 9.75c-2.551 0-5.056.2-7.5.582V21M3 21h18M12 6.75h.008v.008H12V6.75z" />
                </svg>
              </span>
              <span>OUR MISSION</span>
            </h3>
            <p class="text-off-white/80">To create a thriving Laravel ecosystem in Dubai by connecting developers, sharing knowledge, and promoting best practices in web development. We aim to be the go-to resource for Laravel enthusiasts in the UAE and beyond.</p>
          </div>
          
          <div class="bg-black/30 rounded-lg p-6 border border-laravel-red/10 hover:border-laravel-red/30 transition-colors">
            <h3 class="font-syncopate text-xl mb-4 flex items-center">
              <span class="text-laravel-red mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                </svg>
              </span>
              <span>OUR VISION</span>
            </h3>
            <p class="text-off-white/80">To establish Dubai as a global hub for Laravel development, innovation, and talent. We envision a community that drives technological advancement and creates opportunities for developers at all skill levels.</p>
          </div>
        </div>
        
        <div class="bg-black/30 rounded-lg p-8 border border-laravel-red/10 relative overflow-hidden">
          <!-- Dubai Skyline Silhouette Background -->
          <div class="absolute bottom-0 left-0 right-0 h-24 bg-[url('/dubai-skyline.svg')] bg-repeat-x bg-bottom opacity-10 -z-10"></div>
          
          <h3 class="font-syncopate text-xl mb-6 text-center">
            COMMUNITY <span class="text-laravel-red">HIGHLIGHTS</span>
          </h3>
          
          <div class="space-y-6">
            <!-- Upcoming Events -->
            <div class="flex items-start">
              <div class="flex-shrink-0 mr-4">
                <div class="rounded-full bg-laravel-red p-1 inline-flex">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                  </svg>
                </div>
              </div>
              <div>
                <h4 class="font-syncopate text-sm mb-1 text-laravel-red">MONTHLY MEETUPS</h4>
                <p class="text-off-white/80">Join our regular Laravel community meetups held at stunning venues across Dubai. Each month features technical talks, live coding sessions, and networking with fellow Laravel enthusiasts.</p>
              </div>
            </div>
            
            <!-- Laravel Dubai Projects -->
            <div class="flex items-start">
              <div class="flex-shrink-0 mr-4">
                <div class="rounded-full bg-laravel-red p-1 inline-flex">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />
                  </svg>
                </div>
              </div>
              <div>
                <h4 class="font-syncopate text-sm mb-1 text-laravel-red">OPEN SOURCE PROJECTS</h4>
                <p class="text-off-white/80">Laravel Dubai maintains several open-source packages specifically designed for regional needs. Contribute to our growing ecosystem of tools and libraries built with the elegant Laravel framework.</p>
              </div>
            </div>
            
            <!-- Annual Laravel Dubai Conference -->
            <div class="flex items-start">
              <div class="flex-shrink-0 mr-4">
                <div class="rounded-full bg-laravel-red p-1 inline-flex">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0012 9.75c-2.551 0-5.056.2-7.5.582V21M3 21h18M12 6.75h.008v.008H12V6.75z" />
                  </svg>
                </div>
              </div>
              <div>
                <h4 class="font-syncopate text-sm mb-1 text-laravel-red">ANNUAL CONFERENCE</h4>
                <p class="text-off-white/80">Mark your calendar for LaravelDXB Conf 2025, our flagship annual event featuring international Laravel experts, hands-on workshops, and breathtaking venues showcasing the best of Dubai's architectural innovation.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Speakers Section -->
    <section id="speakers" class="py-20 px-4 md:px-8 bg-black/40 relative overflow-hidden hidden">
      <!-- Dubai skyline background with very low opacity -->
      <div class="absolute bottom-0 left-0 right-0 h-24 bg-[url('/dubai-skyline.svg')] bg-repeat-x bg-bottom opacity-10 -z-10"></div>
      
      <div class="container mx-auto max-w-5xl opacity-0 translate-y-4" id="speakers-section">
        <h2 class="font-syncopate text-3xl md:text-4xl mb-4 text-center">FEATURED <span class="text-laravel-red">SPEAKERS</span></h2>
        <p class="text-center text-off-white/80 mb-12 max-w-3xl mx-auto">Meet our extraordinary speakers bringing Laravel expertise to Dubai</p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Speaker 1 -->
          <div class="bg-black/30 rounded-lg p-6 border border-laravel-red/10 hover:border-laravel-red/30 transition-colors group relative overflow-hidden">

            
            <div class="relative">
              <!-- Speaker Image with Gold Border -->
              <div class="w-32 h-32 mx-auto mb-4 rounded-full overflow-hidden border-2 border-laravel-red/20 p-1">
                <div class="rounded-full overflow-hidden h-full w-full bg-black flex items-center justify-center text-laravel-red/80">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-12 h-12">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                  </svg>
                </div>
              </div>
              
              <!-- Speaker Info -->
              <div class="text-center">
                <h3 class="font-syncopate text-xl mb-1">AHMAD SULTAN</h3>
                <p class="text-laravel-red text-sm mb-3">Laravel Core Contributor</p>
                <p class="text-off-white/70 text-sm mb-4">Building robust Laravel applications for enterprise clients across the UAE</p>
                
                <!-- Social Links with Dubai Gold Accent -->
                <div class="flex justify-center space-x-3">
                  <a href="#" class="text-off-white/50 hover:text-laravel-red transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
