      50% { opacity: 0.3; }
    }
    .animate-glow {
      animation: glow 2s ease-in-out infinite alternate;
    }
    @keyframes glow {
      from { opacity: 0.5; }
      to { opacity: 0.8; }
    }
  </style>
  
  <script>
    // Animation handler for all sections
    document.addEventListener('DOMContentLoaded', () => {
      // Elements to animate
      const sections = [
        { id: 'header-section', delay: 0 },
        { id: 'hero-content', delay: 300 },
        { id: 'event-section', delay: 600 },
        { id: 'speakers-section', delay: 800 },
        { id: 'about-section', delay: 1000 },
        { id: 'about-us-section', delay: 1200 },
        { id: 'join-section', delay: 1400 },
        { id: 'footer-section', delay: 1600 }
      ];
      
      // Animate each section with proper timing
      sections.forEach(section => {
        const element = document.getElementById(section.id);
        if (element) {
          setTimeout(() => {
            element.classList.add('transition-all', 'duration-1000', 'ease-out');
            element.classList.remove('opacity-0', 'translate-y-4');
          }, section.delay);
        }
      });
      
      // Set up intersection observer for scroll animations
      const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.1
      };
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('transition-all', 'duration-1000', 'ease-out');
            entry.target.classList.remove('opacity-0', 'translate-y-4');
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);
      
      // Add scroll animations for sections that are not in the initial viewport
      sections.forEach(section => {
        const element = document.getElementById(section.id);
        if (element && section.delay > 500) {
          observer.observe(element);
        }
      });
    });
  </script>
